{
  "name": "bloom-conn",
  "productName": "BloomConn",
  "private": true,
  "version": "0.0.0",
  "description": "Monitoring for weaving looms",
  "author": "Mike Semyonov <admin@arktos.eu.org>",
  "license": "MIT",
  "main": "dist/electron/main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder"
  },
  "engines": {
    "node": ">=14.17.0"
  },
  "build": {
    "extends": null,
    "appId": "com.bloom.conn",
    "productName": "BloomConn",
    "asar": true,
    "copyright": "Copyright Â© 2022 ${author}",
    "directories": {
      "output": "release/${version}",
      "buildResources": "electron/resources"
    },
    "files": [
      "dist"
    ],
    "mac": {
      "artifactName": "${productName}-Mac-${version}-Installer.${ext}",
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "artifactName": "${productName}-Linux-${version}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-Windows-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "electron-store": "^8.0.1",
    "exceljs": "^4.3.0",
    "file-saver": "^2.0.5"
  },
  "devDependencies": {
    "@ant-design/charts": "^1.4.2",
    "@ant-design/icons": "^4.7.0",
    "@types/file-saver": "^2.0.5",
    "@types/lodash-es": "^4.17.6",
    "@types/react": "^17.0.47",
    "@types/react-dom": "^17.0.17",
    "@vitejs/plugin-react": "^1.3.2",
    "antd": "^4.23.5",
    "electron": "^19.0.7",
    "electron-builder": "^5.5.0",
    "i18next": "^21.8.14",
    "less": "^4.1.3",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.18.1",
    "react-router": "^6.3.0",
    "react-router-dom": "^6.3.0",
    "react-scripts": "^5.0.1",
    "sass": "^1.52.2",
    "typescript": "^4.7.3",
    "vite": "^2.9.10",
    "vite-plugin-electron": "^0.6.1"
  },
  "env": {
    "VITE_DEV_SERVER_HOST": "127.0.0.1",
    "VITE_DEV_SERVER_PORT": 7778
  }
}
